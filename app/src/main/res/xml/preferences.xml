<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:key="sessionPrefs"
        android:title="Session Prefrences" />


    <ListPreference
        android:key="gameType"
        android:persistent="true"
        android:shouldDisableView="true"
        android:title="Game Type"/>


    <ListPreference
        android:key="limit"
        android:persistent="true"
        android:shouldDisableView="true"
        android:title="Limit"/>

    <ListPreference
        android:key="stake"
        android:persistent="true"
        android:shouldDisableView="true"
        android:title="Stake"/>


    <EditTextPreference
        android:key="buyIn"
        android:persistent="true"
        android:title="Buy-In"/>

    <ListPreference
        android:dependency="bankroll"
        android:key="bankroll"
        android:persistent="true"
        android:title="Bankroll"/>

    <ListPreference
        android:key="currency"
        android:persistent="true"
        android:shouldDisableView="true"
        android:title="Currency"/>

    <ListPreference
        android:key="location"
        android:persistent="true"
        android:shouldDisableView="true"
        android:title="Location"/>


</PreferenceScreen>